      <node name="dev3"
            hostAddress="riak-test"
            pbcPort="10037"
            restScheme="http"
            restPort="10038"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
      <node name="dev4"
            hostAddress="riak-test"
            pbcPort="10047"
            restScheme="http"
            restPort="10048"
            poolSize="20" />
      <!--idleTimeout="1000" />-->
    </nodes>
  </riakClusterConfiguration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>
